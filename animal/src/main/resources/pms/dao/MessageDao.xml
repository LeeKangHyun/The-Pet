<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="pms.dao.MessageDao">
	
	<resultMap type="message" id="messageMap">
		<id 	column="MSG_NUM" 		property="msgNo"/>
		<result column="MEM_NUM" 		property="sendMno"/>    
		<result column="MEM_NUM2" 		property="recvMno"/>
		<result column="MSG_CONTENT" 	property="msgContent"/>
		<result column="CHECKED" 		property="msgChecked"/>
		<result column="SEND_DATE" 		property="msgCreateDate"/>
	</resultMap>
	
	<select id="selectList" resultMap="messageMap" parameterType="map">
		select 
			MSG_NUM, 
			MEM_NUM,
			MEM_NUM2,
			MSG_CONTENT,
			CHECKED,
			SEND_DATE
		from message
		where MEM_NUM2=#{recvMno}
		order by SEND_DATE desc
		limit #{startIndex}, 15
	</select>
	
	<select id="selectOne" resultMap="messageMap" parameterType="int">
		select 
			MSG_NUM, 
			MEM_NUM,
			MEM_NUM2,
			MSG_CONTENT,
			CHECKED,
			SEND_DATE
		from message
		where MSG_NUM=#{msgNo}
	</select>
	
	<select id="noRead" resultMap="messageMap" parameterType="int">
		select count(*) as noReadCount
		from message
		where MEM_NUM2=#{recvMno} and CHECKED=0
	</select>
	
	<update id="read" parameterType="int">
		update message set 
			CHECKED=1
		where MSG_NUM=#{msgNo} 
	</update>
	
	<insert id="insert" parameterType="message">
		insert into message(MEM_NUM,MEM_NUM2,MSG_CONTENT,CHECKED,SEND_DATE)
		values(#{sendMno},#{recvMno},#{msgContent},0,now())
	</insert>
	
	<delete id="delete" parameterType="int">
		delete from message where MSG_NUM=#{msgNo}
	</delete>
	
	<delete id="deleteAll" parameterType="int">
		delete from message where MEM_NUM2=#{recvMno}
	</delete>
    
</mapper>






