<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="pms.dao.LotDao">
  <resultMap type="lot" id="lotMap">
    <id column="lno" property="lno"/>
    <result column="lat" property="lat"/>
    <result column="lng" property="lng"/>
    <result column="mno" property="mno"/>
  </resultMap>

  <select id="list" resultMap="lotMap" parameterType="int">
    select
      lat,
      lng
    from lot
    where mno=#{value}
  </select>

  <insert id="add" parameterType="lot">
    insert into lot(lat, lng, mno)
    values(#{lat}, #{lng}, 1)
  </insert>

</mapper>